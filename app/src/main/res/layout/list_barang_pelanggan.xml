<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/imageView4"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="8dp"
           android:layout_marginBottom="8dp"
           android:src="@drawable/ic_insert_photo"
           card_view:layout_constraintBottom_toBottomOf="parent"
           card_view:layout_constraintStart_toStartOf="parent"
           card_view:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/namaBarang"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
           android:layout_marginTop="24dp"
           android:text="CLEO"
           android:textColor="#000"
           android:textSize="16sp"
           android:textStyle="bold"
           card_view:layout_constraintStart_toEndOf="@+id/imageView4"
           card_view:layout_constraintTop_toTopOf="@+id/imageView4" />

       <TextView
           android:id="@+id/hargaBarang"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
           android:text="Rp. 3000"
           card_view:layout_constraintStart_toStartOf="@+id/namaBarang"
           card_view:layout_constraintTop_toBottomOf="@+id/namaBarang" />

       <Button
           android:id="@+id/btnTambah"
           android:layout_width="32dp"
           android:layout_height="27dp"
           android:layout_marginEnd="16dp"
           android:layout_marginBottom="16dp"
           android:background="@drawable/bg_button_circle"
           android:text="+"
           android:textColor="#fff"
           card_view:layout_constraintBottom_toBottomOf="parent"
           card_view:layout_constraintEnd_toEndOf="parent" />

   </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>